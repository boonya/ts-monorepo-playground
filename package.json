{
  "name": "ts-project-test",
  "version": "1.0.0",
  "scripts": {
    "tsc": "rm -rf build && tsc",
    "clean": "rm -rf **/build **/*.tsbuildinfo",
    "tsc:build": "tsc -b",
    "tsc:build:both": "npm run build:first && npm run build:second",
    "tsc:build:first": "tsc -b packages/first/tsconfig.build.json",
    "tsc:build:second": "tsc -b packages/second/tsconfig.build.json"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tsconfig/node20": "^20.1.0",
    "@types/jest": "^29.5.3",
    "tsc-alias": "^1.8.7",
    "typescript": "~5.0.4"
  }
}
