{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "inlineSources": true,
    "noEmit": false,
    "removeComments": true,
    "sourceMap": true
  },
  "exclude": [
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/build/",
    "**/coverage/",
    "**/docs/",
    "**/node_modules/",
    "**/scripts/",
    "**/storybook-static/"
  ]
}
