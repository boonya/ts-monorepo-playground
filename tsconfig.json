{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "build",
    "paths": {
      "@first/*": ["packages/first/src/*"],
      "@second/*": ["packages/second/src/*"]
    },
    "inlineSources": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true
  },
  "references": [
    { "@first/": "packages/first/src" },
    { "@second/": "packages/second/src" }
  ],
  "exclude": ["build", "coverage", "node_modules", "storybook-static/"]
}
