{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023", "dom"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react-jsx",
    // "outDir": "build",
    "paths": {
      "@ts-project-test/first/*": ["./packages/first/src/*"],
      "@ts-project-test/second/*": ["./packages/second/src/*"]
    },
    "inlineSources": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "composite": true
  },
  "references": [
    { "@ts-project-test/first/": "./packages/first/src/" },
    { "@ts-project-test/second/": "./packages/second/src/" }
  ],
  "exclude": ["build", "coverage", "node_modules", "storybook-static/"]
}
